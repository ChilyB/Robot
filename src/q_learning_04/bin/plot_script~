set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically



set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set terminal png size 1024,768 enhanced font "Helvetica,20"


set label

set xlabel "position x[0]"
set ylabel "position x[1]"
set zlabel "reward value"

set view 50,30 

set xtic auto
set ytic auto
set ztic auto

set lmargin 6
set key right top


set hidden3d

set dgrid3d 64,64
#set xyplane at 0
set surface

set autoscale

set zrange [0:1]

#set style fill transparent solid 0.5 noborder

set output 'q_map.png' 

splot 'q_map.txt' using 1:2:3 title "q learning result" with lines, \
	'q_map.txt' using 1:2:4 title "optional result" with lines


set zlabel "error"

set output 'q_map_error.png' 
splot 'q_map.txt' using 1:2:5 title "error value" with lines
	

